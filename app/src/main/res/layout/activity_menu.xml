<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.te.unan.appestudianteswm.MenuActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo_menu">




    <LinearLayout
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageView
        android:id="@+id/nivel1"
            android:layout_width="188dp"
            android:layout_height="200dp"
        app:srcCompat="@drawable/nivel1"
        tools:ignore="VectorDrawableCompat"
        android:layout_marginRight="30pt"
        android:layout_marginLeft="50pt"
        />

        <ImageView
            android:id="@+id/nivel2"
            android:layout_width="188dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/nivel2"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginRight="30pt"

            />

        <ImageView
            android:id="@+id/nivel3"
            android:layout_width="188dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/nivel3"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginRight="20pt"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/btncreditos"
            android:layout_width="230dp"
            android:layout_height="140dp"
            android:background="@drawable/btn_creditos"
            android:layout_marginLeft="375dp"
            android:layout_marginTop="50dp"
            />


    </LinearLayout>

</LinearLayout>
