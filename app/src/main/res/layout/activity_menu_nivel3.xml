<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.te.unan.appestudianteswm.MenuNivel3"
    android:background="@drawable/fondo_nive_3"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="45dp">
        <!--SCROLLVIEW PARA AGREGAR ACTIVIDADES -->
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--LINER PARA ORDENAR LAS ACTIVIDADES DE FORMA HORIZONTAL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="65dp">

                <!--LINER PARA ORDENAR LAS ACTIVIDADES DE FORMA HORIZONTAL -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--LINER PARA AGREGAR ICONOS DE LAS ACTIVIDADES 1-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/actividad21"
                            android:layout_width="360dp"
                            android:layout_height="155dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btn_dialogo_n3"
                            />

                        <ImageView
                            android:id="@+id/actividad22"
                            android:layout_width="360dp"
                            android:layout_height="155dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btn_completar" />



                    </LinearLayout>

                    <!--LINER PARA AGREGAR ICONOS DE LAS ACTIVIDADES 2-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/actividad23"
                            android:layout_width="360dp"
                            android:layout_height="155dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btn_crusigrama3"
                            />

                        <ImageView
                            android:id="@+id/actividad24"
                            android:layout_width="360dp"
                            android:layout_height="155dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btn_dictadon3" />

                    </LinearLayout>

                    <!--LINER PARA AGREGAR ICONOS DE LAS ACTIVIDADES 3-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/actividad25"
                            android:layout_width="360dp"
                            android:layout_height="155dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btn_ordenar_n3"

                            />
                        <ImageView
                            android:id="@+id/actividad26"
                            android:layout_width="360dp"
                            android:layout_height="155dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btn_ordenarletras3"

                            />



                    </LinearLayout>
                    <!--LINER PARA AGREGAR ICONOS DE LAS ACTIVIDADES 3-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/actividad27"
                            android:layout_width="360dp"
                            android:layout_height="155dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btn_presentacion3"

                            />
                        <ImageView
                            android:id="@+id/actividad28"
                            android:layout_width="360dp"
                            android:layout_height="155dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btn_relacionarcolumnas3"

                            />



                    </LinearLayout>

                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/actividad29"
                        android:layout_width="360dp"
                        android:layout_height="155dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/btn_relacionar3"

                        />
                    <ImageView
                        android:id="@+id/actividad30"
                        android:layout_width="360dp"
                        android:layout_height="155dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/btn_ruletadepalabras3"

                        />



                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/actividad31"
                            android:layout_width="360dp"
                            android:layout_height="155dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btn_ruletadepalabras3"

                            />

                        <ImageView
                            android:id="@+id/actividad32"
                            android:layout_width="360dp"
                            android:layout_height="155dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/btn_ruletadepalabras3"

                            />




                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>
